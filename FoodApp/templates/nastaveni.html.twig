{% block javascripts %}
<script>
        let chciSeStatProdavajicimCheckbox = document.querySelector("#chci-se-stat-prodavajicim");
        chciSeStatProdavajicimCheckbox.addEventListener("click", chciSeStatProdavajicimCheckboxClicked);

