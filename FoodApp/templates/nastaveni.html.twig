            document.getElementById("novy-email").style.display = "block";

        }

        function zmenitUsername()
        {
            document.getElementById("nove-username").style.display = "block";

        }

        function chciSeStatProdejnouCheckboxClicked(event)
        {
            document.getElementById("prodejna").style.display = "block";
            document.getElementById("prodavajici").style.display = "none";
            document.getElementById("organizace").style.display = "none";
        }

        function chciSeStatProdavajicimCheckboxClicked(event)
        {
            document.getElementById("prodavajici").style.display = "block";
            document.getElementById("prodejna").style.display = "none";
            document.getElementById("organizace").style.display = "none";

        }

        function chciSeStatOrganizaciCheckboxClicked(event)
