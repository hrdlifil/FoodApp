{% extends 'base.html.twig' %}
{% block title %}Homepage{% endblock %}
{% block stylesheets %}
    <style>
        *
        {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }

        html
        {
            height: 100%;
        }

        body
        {
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;

        }
        table, th, td {
            border: 1px solid black;
        }
    </style>


{% endblock %}

{% block body %}
    <h3>Více informací</h3>
    <a href="{{ path("trziste") }}">ZPET</a>
    Uživatel, který nabídku vytvořil: {{ nabidka.user.login }}
    <br/>
    Role uživatele: {{ nabidka.user.role }}
    <br/>
    {% if nabidka.user.role is same as("prodejna") %}
        Jméno prodejny: {{ nabidka.user.nameOfShop }}
        <br/>
    {% endif %}
    {% if nabidka.user.role is same as("organizace") %}
        Jméno organizace: {{ nabidka.user.nameOfOrganization }}
        <br/>
    {% endif %}
    <a href="#">Profil uživatele</a>
    <br/>
    Nabídka je platná do: {{ nabidka.getOfferExpirationString() }}
    <br/>
    Původní cena produktu: {{ nabidka.price.boughtForPrice }}
    <br/>
    Současná cena produktu: {{ nabidka.price.currentPrice }}
    <br/>
    Sleva: {{ nabidka.price.discount }}
    <br/>
    Kde lze nabídku vyzvednout: {{ nabidka.pickingOption.address.toString }}
    <br/>
    Kategorie: {{ nabidka.product.category.nameOfCategory }}
    <br/>
    Značka: {{ nabidka.product.brand.brandName }}
    <br/>
    Jméno produktu: {{ nabidka.product.productName }}
    <br/>
    Datum expirace produktu: {{ nabidka.getProductExpirationString() }}
    <br/>
    Další informace: {{ nabidka.additionalInformation }}
    <a href="{{ path("rezervovat_nabidku", {id: nabidka.offerId}) }}"><button>Rezervovat nabídku</button></a>



{% endblock %}
{% block javascripts %}



{% endblock %}